<div class="navbar">

	{{!-- Logo --}}
	<div class="logo_container"><button class="logo dropdown button"><img src="/static/images/logo.svg"/></button></div>

	{{!-- Buttons --}}
	<div class="buttons">

		{{!-- Settings --}}
		<button class="settings dropdown button"><i class="fa fa-cog"></i></button>

		{{!-- Profile --}}
		<button class="profile dropdown button"><i class="fas fa-user-circle"></i></button>

		{{!-- Menu --}}
		<div class="menu">

			{{!-- Tabs --}}
			<div class="tabs">

				{{!-- Settings --}}
				<div class="settings_tab">

					{{!-- Header --}}
					<div class="header">

						{{!-- Title --}}
						<div class="title">Settings</div>

						{{!-- Underline --}}
						<div class="underline"></div>

					</div>

					{{!-- Section --}}
					<div class="essay section">

						{{!-- Title --}}
						<div class="title">Essay Settings</div>

						{{!-- Page Numbers --}}
						<div class="row">
							<label for="essay_settings_page_numbers">Page Numbers</label>
							<div class="checkbox">
								<input type="checkbox" name="essay_settings_page_numbers" id="essay_settings_page_numbers" checked/>
								<label for="essay_settings_page_numbers"></label>
							</div>
						</div>

						{{!-- Cover Page --}}
						<div class="row">
							<label for="essay_settings_cover_page">Cover Page</label>
							<div class="checkbox">
								<input type="checkbox" name="essay_settings_cover_page" id="essay_settings_cover_page" checked/>
								<label for="essay_settings_cover_page"></label>
							</div>
						</div>

						{{!-- Essay Title --}}
						<div class="row">
							<label for="essay_settings_essay_title">Essay Title</label>
							<div class="checkbox">
								<input type="checkbox" name="essay_settings_essay_title" id="essay_settings_essay_title" checked/>
								<label for="essay_settings_essay_title"></label>
							</div>
						</div>

						{{!-- Word Count --}}
						<div class="row">
							<label for="essay_settings_word_count">Word Count</label>
							<div class="checkbox">
								<input type="checkbox" name="essay_settings_word_count" id="essay_settings_word_count" checked/>
								<label for="essay_settings_word_count"></label>
							</div>
						</div>

						{{!-- Essay Title --}}
						<div class="row">
							<label for="essay_settings_new_line">New Line After Paragraph?</label>
							<div class="checkbox">
								<input type="checkbox" name="essay_settings_new_line" id="essay_settings_new_line"/>
								<label for="essay_settings_new_line"></label>
							</div>
						</div>

						{{!-- Underline --}}
						<div class="underline"></div>

					</div>

					{{!-- Section --}}
					<div class="font section">

						{{!-- Title --}}
						<div class="title">Font Settings</div>

						{{!-- Font Family --}}
						<div class="row">
							<label for="essay_settings_font_family">Font Family</label>
							<div class="dropdown">
								<select name="essay_settings_font_family" id="essay_settings_font_family">
									<option value="Times New Roman">Times New Roman</option>
									<option value="Arial">Arial</option>
									<option value="Calibri">Calibri</option>
								</select>
							</div>
						</div>

						{{!-- Font Size --}}
						<div class="row">
							<label for="essay_settings_font_size">Font Size</label>
							<div class="input">
								<input type="number" name="essay_settings_font_size" id="essay_settings_font_size" value=12 min=8 max=32/>
								<label class="unit">px</label>
							</div>
						</div>

						{{!-- Font Color --}}
						<div class="row">
							<label for="essay_settings_font_color">Font Color</label>
							<div class="input">
								<input type="color" name="essay_settings_font_color" id="essay_settings_font_color"/>
							</div>
						</div>

						{{!-- Underline --}}
						<div class="underline"></div>

					</div>

					{{!-- Section --}}
					<div class="line section">

						{{!-- Title --}}
						<div class="title">Line Settings</div>

						{{!-- Line Spacing --}}
						<div class="row">
							<label for="essay_settings_line_spacing">Line Spacing</label>
							<div class="input">
								<input type="number" name="essay_settings_line_spacing" id="essay_settings_line_spacing" value='2' min='1' max='2'/>
								<label class="unit">lines</label>
							</div>
						</div>

						{{!-- Line Spacing --}}
						<div class="row">
							<label for="essay_settings_paragraph_spacing">Paragraph Spacing</label>
							<div class="input">
								<input type="number" name="essay_settings_paragraph_spacing" id="essay_settings_paragraph_spacing" value='0' min='0' max='2'/>
								<label class="unit">lines</label>
							</div>
						</div>

						{{!-- Underline --}}
						<div class="underline"></div>

					</div>

					{{!-- Section --}}
					<div class="margin section">

						{{!-- Title --}}
						<div class="title">Margin Settings</div>

						{{!-- Line Spacing --}}
						<div class="row">
							<label for="essay_settings_margin_spacing">Margin Spacing</label>
							<div class="input">
								<input type="number" name="essay_settings_margin_spacing" id="essay_settings_margin_spacing" value=1 min=0 max=3/>
								<label class="unit">inch</label>
							</div>
						</div>

						{{!-- Underline --}}
						<div class="underline"></div>

					</div>

					{{!-- Section --}}
					<div class="highlight section">

						{{!-- Title --}}
						<div class="title">Highlight Settings</div>

						{{!-- Line Spacing --}}
						<div class="row">
							<label for="essay_settings_highlight_type">Highlight Type</label>
							<div class="dropdown">
								<select name="essay_settings_highlight_type" id="essay_settings_highlight_type">
									<option value="none">None</option>
									<option value="yellow highlight">Yellow Highlight</option>
									<option value="bold">Bold</option>
									<option value="underline">Underline</option>
									<option value="strikethrough">Strikethrough</option>
									<option value="capitalise">Capitalise</option>
								</select>
							</div>
						</div>

					</div>
					
				</div>

				{{!-- Profile --}}
				<div class="profile_tab">

					{{!-- Student Details --}}
					<div class="student_details">

						{{!-- Student ID --}}
						<div class="id">#2104747</div>

						{{!-- Student Name --}}
						<div class="name">Muhammad Fauzan Aristya Putra</div>

						{{!-- Student Institution --}}
						<div class="institution">Qatar University</div>

					</div>

					{{!-- Links --}}
					<div class="links">

						{{!-- Profile --}}
						<a href="/dashboard?tab=profile" class="profile link">Profile</a>

						{{!-- Courses --}}
						<a href="/dashboard?tab=courses" class="link">Courses</a>

						{{!-- Formats --}}
						<a href="/dashboard?tab=formats" class="link">Formats</a>

						{{!-- Settings --}}
						<a href="/dashboard?tab=settings" class="link">Settings</a>

					</div>

					{{!-- Footer --}}
					<div class="footer">

						{{!-- Log Out Button --}}
						<button class="logout"><i class="fa fa-sign-out"></i>Logout</button>

					</div>

				</div>

				{{!-- Sign Up --}}
				<div class="signup_tab">

					{{!-- Underline --}}
					<div class="underline"></div>

					{{!-- Header --}}
					<div class="header">Set Up Your Profile</div>

					{{!-- Meta --}}
					<div class="meta">This will be used to automatically fill in your details in essays</div>

					{{!-- Form --}}
					<form class="form">

						{{!-- Name --}}
						<div class="input">
							<input type="text" id="name" name="name" spellcheck="false" required/>
							<label htmlFor="name">Name</label>
						</div>

						{{!-- Student ID --}}
						<div class="input">
							<input type="text" id="student_id" name="student_id" spellcheck="false" required/>
							<label htmlFor="student_id">Student ID</label>
						</div>

						{{!-- Institution --}}
						<div class="input">
							<input type="text" id="institution" name="institution" spellcheck="false" required/>
							<label htmlFor="institution">Institution</label>
						</div>

						{{!-- Setup Button --}}
						<button class="submit">Submit</button>

					</form>

				</div>

			</div>

		</div>

	</div>

</div>
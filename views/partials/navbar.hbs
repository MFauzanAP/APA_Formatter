{{!-- Navbar --}}
<div class="navbar">

	{{!-- Logo --}}
	<a href="/" class="logo_container"><button class="logo dropdown button"><img src="/static/images/logo.svg"/></button></a>

	{{!-- Buttons --}}
	<div class="buttons">

		{{!-- Settings --}}
		<button class="settings dropdown button"><i class="fa fa-cog"></i></button>

		{{!-- Profile --}}
		<button class="profile dropdown button"><i class="fas fa-user-circle"></i></button>

		{{!-- Menu --}}
		<div class="menu">

			{{!-- Tabs --}}
			<div class="tabs">

				{{!-- Settings --}}
				<div class="settings_tab">

					{{!-- Header --}}
					<div class="header">

						{{!-- Title --}}
						<div class="title">Settings</div>

						{{!-- Underline --}}
						<div class="underline"></div>

					</div>

					{{!-- Section --}}
					<div class="site section">

						{{!-- Title --}}
						<div class="title">Site Settings</div>

						{{!-- Alerts --}}
						<div class="row">
							<label for="settings_alerts">Alerts</label>
							<div class="checkbox">
								<input type="checkbox" name="settings_alerts" id="settings_alerts" checked/>
								<label for="settings_alerts"></label>
							</div>
						</div>

						{{!-- Autofill Details --}}
						<div class="row">
							<label for="settings_autofill_details">Autofill Details</label>
							<div class="checkbox">
								<input type="checkbox" name="settings_autofill_details" id="settings_autofill_details" checked/>
								<label for="settings_autofill_details"></label>
							</div>
						</div>

						{{!-- Dark Theme --}}
						<div class="row">
							<label for="settings_dark_theme">Dark Theme</label>
							<div class="checkbox">
								<input type="checkbox" name="settings_dark_theme" id="settings_dark_theme"/>
								<label for="settings_dark_theme"></label>
							</div>
						</div>

					</div>
					
				</div>

				{{!-- Profile --}}
				<div class="profile_tab">

					{{!-- Student Details --}}
					<div class="student_details">

						{{!-- Student ID --}}
						<div class="id">#2104747</div>

						{{!-- Student Name --}}
						<div class="name">Muhammad Fauzan Aristya Putra</div>

						{{!-- Student Institution --}}
						<div class="institution">Qatar University</div>

					</div>

					{{!-- Links --}}
					<div class="links">

						{{!-- Profile --}}
						<a href="/dashboard?tab=profile" class="profile link">Profile</a>

						{{!-- Courses --}}
						<a href="/dashboard?tab=courses" class="link">Courses</a>

						{{!-- Formats --}}
						<a href="/dashboard?tab=submissions" class="link">Submissions</a>

						{{!-- Settings --}}
						<a href="/dashboard?tab=settings" class="link">Settings</a>

					</div>

					{{!-- Footer --}}
					<div class="footer">

						{{!-- Log Out Button --}}
						<button class="logout"><i class="fa fa-sign-out"></i>Logout</button>

					</div>

				</div>

				{{!-- Sign Up --}}
				<div class="signup_tab">

					{{!-- Underline --}}
					<div class="underline"></div>

					{{!-- Header --}}
					<div class="header">Set Up Your Profile</div>

					{{!-- Meta --}}
					<div class="meta">This will be used to automatically fill in your details in essays</div>

					{{!-- Form --}}
					<form class="form">

						{{!-- Name --}}
						<div class="input">
							<input type="text" id="name" name="name" spellcheck="false" required/>
							<label htmlFor="name">Name</label>
						</div>

						{{!-- Student ID --}}
						<div class="input">
							<input type="text" id="student_id" name="student_id" spellcheck="false" required/>
							<label htmlFor="student_id">Student ID</label>
						</div>

						{{!-- Institution --}}
						<div class="input">
							<input type="text" id="institution" name="institution" spellcheck="false" required/>
							<label htmlFor="institution">Institution</label>
						</div>

						{{!-- Setup Button --}}
						<button class="submit">Submit</button>

					</form>

				</div>

			</div>

		</div>

	</div>

</div>